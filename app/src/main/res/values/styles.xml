<resources>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlNormal">?actionBarIconColor</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.JFQ.PopupMenu" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:dropDownSelector">?popupItemBackground</item>
    </style>

    <style name="Widget.JFQ.ListView.DropDown" parent="Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">?popupItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="TextAppearance.LargePopupMenu" parent="TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/body_text_1</item>
    </style>

    <style name="Widget.JFQ.SearchView" parent="Widget.AppCompat.SearchView" />

    <style name="Theme.JFQ.Login" parent="Theme.JFQ" />

    <style name="Widget.JFQ.ToolBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="Widget.JFQ.ToolBarStyle.Naked">
        <item name="android:background">@null</item>
    </style>

    <!-- Dialog -->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/theme_accent_1</item>
        <item name="colorControlActivated">@color/theme_accent_1</item>
        <item name="colorControlNormal">@color/color_dk_grey</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/theme_accent_1</item>
        <item name="colorControlActivated">@color/theme_accent_1</item>
        <item name="colorControlNormal">@color/color_dk_grey</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <!--Project-->
    <style name="BaseTextStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="BaseTextStyle.Huge">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="BaseTextStyle.Huge.Black">
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="BaseTextStyle.Large">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="BaseTextStyle.Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BaseTextStyle.Medium.Red">
        <item name="android:textColor">@color/color_red</item>
    </style>

    <style name="BaseTextStyle.Medium.DkGrey">
        <item name="android:textColor">@color/color_dk_grey</item>
    </style>

    <style name="BaseTextStyle.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BaseTextStyle.Small.DkGrey">
        <item name="android:textColor">@color/color_dk_grey</item>
    </style>

    <!--Login Activity-->
    <style name="FlatButton">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="Widget.JFQ.NormalButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_marginLeft">@dimen/btn_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/btn_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/btn_margin_vertical</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="LoginEditText">
        <item name="android:layout_marginTop">@dimen/login_edittext_margin</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textColorHint">@color/color_white</item>
    </style>

    <!-- Mine Fragment -->
    <style name="BadgeText">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:minWidth">@dimen/head_badge_size</item>
    </style>

    <style name="MineListItem">
        <item name="android:background">@drawable/list_item_bg_selector</item>
        <item name="android:paddingLeft">@dimen/list_item_padding</item>
        <item name="android:paddingRight">@dimen/list_item_padding</item>
        <item name="android:minHeight">?android:listPreferredItemHeight</item>
    </style>

    <!--Book Item-->
    <style name="BookItemImage">
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="CommentUserName" parent="BaseTextStyle.Medium">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/color_blue</item>
    </style>

    <style name="CommentUserContent" parent="BaseTextStyle.Small">
        <item name="android:maxLines">4</item>
        <item name="android:singleLine">false</item>
        <item name="android:textColor">@color/color_dk_grey</item>
    </style>

    <style name="Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:paddingTop">@dimen/button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/button_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/button_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/button_padding_horizontal</item>
    </style>

    <style name="ListItemTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/color_white</item>
        <item name="android:paddingTop">@dimen/text_padding_defalut</item>
        <item name="android:paddingBottom">@dimen/text_padding_defalut</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:paddingLeft">@dimen/text_padding_defalut</item>
        <item name="android:paddingRight">@dimen/text_padding_defalut</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/list_item_text_size</item>
    </style>

    <style name="SectionContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@drawable/section_divider</item>
    </style>

</resources>
